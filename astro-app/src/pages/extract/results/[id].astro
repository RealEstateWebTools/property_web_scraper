---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ExportDropdown from '../../../components/ExportDropdown.astro';
import SocialShare from '../../../components/SocialShare.astro';
import DataBridgeNotice from '../../../components/DataBridgeNotice.astro';
import { getListing, getDiagnostics } from '@lib/services/listing-store.js';
import { getLatestScrapeForListing } from '@lib/services/scrape-metadata.js';

const { id } = Astro.params;
const listing = id ? await getListing(id) : undefined;
const diagnostics = id ? await getDiagnostics(id) : undefined;
const scrapeRecord = id ? await getLatestScrapeForListing(id) : undefined;
const imageUrls = listing?.image_urls || [];
const mainImage = imageUrls.length > 0 ? imageUrls[0].url : (listing?.main_image_url || '');

// Quality grade color mapping: A=green, B=blue, C=amber, F=red
const gradeColors: Record<string, { bg: string; text: string; icon: string }> = {
  A: { bg: 'bg-green-100', text: 'text-green-900', icon: 'bi-check-circle-fill' },
  B: { bg: 'bg-blue-100', text: 'text-blue-900', icon: 'bi-check-circle-fill' },
  C: { bg: 'bg-amber-100', text: 'text-amber-900', icon: 'bi-exclamation-triangle-fill' },
  F: { bg: 'bg-red-100', text: 'text-red-900', icon: 'bi-x-circle-fill' },
};

// Determine if extraction actually found data.
// When diagnostics exist with quality scoring, use extractable field counts.
// Otherwise, fall back to checking significant fields on the listing.
const significantFields = ['reference', 'title', 'price_string', 'price_float',
  'address_string', 'longitude', 'latitude', 'count_bedrooms', 'count_bathrooms'];
const hasFields = diagnostics
  ? diagnostics.populatedExtractableFields > 0
  : listing
    ? significantFields.some((attr) => {
        const val = (listing as any)[attr];
        return val != null && val !== '' && val !== 0 && val !== false;
      })
    : false;
const grade = diagnostics?.qualityGrade || 'F';
const colors = gradeColors[grade] || gradeColors.F;
const ratePercent = diagnostics ? Math.round(diagnostics.extractionRate * 100) : 0;
const weightedPercent = diagnostics?.weightedExtractionRate != null
  ? Math.round(diagnostics.weightedExtractionRate * 100)
  : null;
const expectedPercent = diagnostics?.expectedExtractionRate != null
  ? Math.round(diagnostics.expectedExtractionRate * 100)
  : null;
const expectationGapPercent = diagnostics?.expectationGap != null
  ? Math.round(diagnostics.expectationGap * 100)
  : null;
const criticalMissing = diagnostics?.criticalFieldsMissing || [];
const contentAnalysis = diagnostics?.contentAnalysis;

const attrs = [
  'reference', 'title', 'description', 'price_string', 'price_float',
  'area_unit', 'address_string', 'currency', 'country', 'longitude',
  'latitude', 'main_image_url', 'for_rent', 'for_sale',
  'count_bedrooms', 'count_bathrooms',
];
---
<BaseLayout title={listing ? (listing.title || 'Extraction Results') : 'Not Found'}>

<section class="max-w-6xl mx-auto px-4 py-8">
  <div class="flex justify-center">
    <div class="w-full max-w-2xl">

      {!listing ? (
        <div class="bg-amber-50 rounded-2xl p-6 text-center">
          <div class="text-3xl text-amber-600 mb-3">
            <i class="bi bi-exclamation-triangle"></i>
          </div>
          <h5 class="font-semibold text-amber-900 mb-2">Result not found</h5>
          <p class="text-amber-800 text-sm">This extraction result may have expired or the ID is invalid.</p>
          <div id="cached-result-fallback" class="hidden bg-white/60 rounded-lg p-4 mt-4 text-left text-sm text-gray-700">
            <p class="font-semibold text-gray-600 mb-2"><i class="bi bi-clock-history mr-1"></i> Last known result</p>
            <div id="cached-result-content"></div>
          </div>
          <div class="bg-white/60 rounded-lg p-4 mt-4 text-sm text-gray-600">
            <a href="/extract/url" class="text-blue-600 hover:underline"><i class="bi bi-arrow-left mr-1"></i> Try a new extraction</a>
          </div>
        </div>
      ) : (
        <>
          {diagnostics ? (
            <div>
              <div class={`flex items-center gap-3 ${colors.bg} ${colors.text} px-5 py-3 rounded-xl mb-2 font-medium`}>
                <i class={`bi ${colors.icon} text-xl`}></i>
                Grade {grade}: {diagnostics.qualityLabel} — {diagnostics.populatedExtractableFields}/{diagnostics.extractableFields} fields ({ratePercent}%{weightedPercent != null ? `, weighted ${weightedPercent}%` : ''})
              </div>
              {criticalMissing.length > 0 && (
                <div class="flex items-center gap-2 bg-red-50 border border-red-200 text-red-800 px-4 py-2 rounded-lg mb-2 text-sm">
                  <i class="bi bi-exclamation-octagon"></i>
                  Critical fields missing: {criticalMissing.join(', ')}
                </div>
              )}
              {expectedPercent != null && diagnostics.expectationStatus && (
                <div class={`flex items-center gap-2 px-4 py-2 rounded-lg mb-2 text-sm ${
                  diagnostics.expectationStatus === 'above' || diagnostics.expectationStatus === 'meets'
                    ? 'bg-green-50 border border-green-200 text-green-800'
                    : diagnostics.expectationStatus === 'below'
                      ? 'bg-amber-50 border border-amber-200 text-amber-800'
                      : diagnostics.expectationStatus === 'well_below'
                        ? 'bg-red-50 border border-red-200 text-red-800'
                        : 'bg-gray-50 border border-gray-200 text-gray-700'
                }`}>
                  <i class="bi bi-speedometer2"></i>
                  Baseline: expected {expectedPercent}% for {diagnostics.scraperName}; actual {ratePercent}%
                  {expectationGapPercent != null && (
                    <span> ({expectationGapPercent >= 0 ? '+' : ''}{expectationGapPercent} pts, {diagnostics.expectationStatus.replace('_', ' ')})</span>
                  )}
                </div>
              )}
              <div class="flex flex-wrap gap-2 mb-4">
                <div class="inline-flex items-center gap-1.5 bg-gray-50 border border-gray-200 px-3 py-1 rounded-lg text-sm">
                  <span class="text-gray-500 text-xs">Confidence:</span>
                  <div class="w-16 bg-gray-200 h-1.5 rounded-full overflow-hidden">
                    <div class={`h-full ${diagnostics.confidenceScore > 0.7 ? 'bg-green-500' : diagnostics.confidenceScore > 0.4 ? 'bg-amber-500' : 'bg-red-500'}`} style={`width: ${diagnostics.confidenceScore * 100}%`}></div>
                  </div>
                  <span class="font-bold text-gray-700">{Math.round(diagnostics.confidenceScore * 100)}%</span>
                </div>
                <div class={`inline-flex items-center gap-1.5 border px-3 py-1 rounded-lg text-sm font-medium ${
                  diagnostics.visibility === 'published' ? 'bg-green-50 border-green-100 text-green-700' :
                  diagnostics.visibility === 'pending' ? 'bg-amber-50 border-amber-100 text-amber-700' :
                  'bg-red-50 border-red-100 text-red-700'
                }`}>
                  <span class="text-xs opacity-70">Status:</span>
                  <span class="capitalize">{diagnostics.visibility}</span>
                </div>
              </div>
              {!diagnostics.meetsExpectation && diagnostics.expectedExtractionRate != null && (
                <div class="flex items-center gap-2 bg-amber-50 border border-amber-200 text-amber-800 px-4 py-2 rounded-lg mb-4 text-sm">
                  <i class="bi bi-exclamation-triangle"></i>
                  Below expected rate of {Math.round(diagnostics.expectedExtractionRate * 100)}% for {diagnostics.scraperName}
                </div>
              )}
              {diagnostics.meetsExpectation && <div class="mb-4"></div>}
            </div>
          ) : hasFields ? (
            <div class="flex items-center gap-3 bg-green-100 text-green-900 px-5 py-3 rounded-xl mb-6 font-medium">
              <i class="bi bi-check-circle-fill text-xl"></i>
              Property data extracted successfully
            </div>
          ) : (
            <div class="flex items-center gap-3 bg-amber-100 text-amber-900 px-5 py-3 rounded-xl mb-6 font-medium">
              <i class="bi bi-exclamation-triangle-fill text-xl"></i>
              No fields extracted — the scraper mapping may need updating
            </div>
          )}

          {scrapeRecord?.better_html_hint?.suggested && (
            <div class="flex items-start gap-3 bg-amber-50 border border-amber-200 text-amber-900 px-5 py-4 rounded-xl mb-4" id="better-html-banner">
              <i class="bi bi-lightbulb text-xl text-amber-600 mt-0.5"></i>
              <div class="flex-1">
                <h6 class="font-semibold mb-1">Better results available</h6>
                <p class="text-sm mb-2">{scrapeRecord.better_html_hint.recommendation}</p>
                <ul class="text-sm list-disc pl-4 mb-2 space-y-0.5">
                  {scrapeRecord.better_html_hint.suggestedActions.map((action) => (
                    <li>{action}</li>
                  ))}
                </ul>
                <div class="flex gap-2 text-sm">
                  <a href="/extract/html" class="text-amber-700 hover:underline font-medium">Paste HTML</a>
                  <span class="text-amber-400">|</span>
                  <a href="/extract/upload" class="text-amber-700 hover:underline font-medium">Upload File</a>
                </div>
              </div>
              <button type="button" class="text-amber-400 hover:text-amber-600 border-0 bg-transparent cursor-pointer" onclick="this.closest('#better-html-banner').remove()">
                <i class="bi bi-x-lg"></i>
              </button>
            </div>
          )}

          <div class="rounded-2xl shadow-md overflow-hidden mb-4">
            {mainImage && (
              <img src={mainImage} alt="Property image" class="w-full h-[200px] object-cover bg-gray-200" />
            )}

            <div class="p-6">
              {listing.title && <h5 class="text-lg font-semibold text-gray-900 mb-3">{listing.title}</h5>}

              <div class="flex flex-wrap gap-2 mb-4">
                {listing.price_string && (
                  <span class="inline-flex items-center gap-1.5 bg-blue-600 text-white font-semibold px-3 py-1.5 rounded-full text-sm">
                    <i class="bi bi-tag-fill"></i> {listing.price_string} {listing.currency || ''}
                  </span>
                )}
                {listing.count_bedrooms > 0 && (
                  <span class="inline-flex items-center gap-1.5 bg-gray-100 px-3 py-1.5 rounded-full text-sm text-gray-700"><i class="bi bi-door-open text-blue-600"></i> {listing.count_bedrooms} beds</span>
                )}
                {listing.count_bathrooms > 0 && (
                  <span class="inline-flex items-center gap-1.5 bg-gray-100 px-3 py-1.5 rounded-full text-sm text-gray-700"><i class="bi bi-droplet text-blue-600"></i> {listing.count_bathrooms} baths</span>
                )}
                {listing.constructed_area > 0 && (
                  <span class="inline-flex items-center gap-1.5 bg-gray-100 px-3 py-1.5 rounded-full text-sm text-gray-700"><i class="bi bi-arrows-angle-expand text-blue-600"></i> {listing.constructed_area} {listing.area_unit}</span>
                )}
                {listing.for_sale && <span class="inline-flex items-center gap-1.5 bg-gray-100 px-3 py-1.5 rounded-full text-sm text-gray-700"><i class="bi bi-house text-blue-600"></i> For Sale</span>}
                {listing.for_rent && <span class="inline-flex items-center gap-1.5 bg-gray-100 px-3 py-1.5 rounded-full text-sm text-gray-700"><i class="bi bi-key text-blue-600"></i> For Rent</span>}
              </div>

              {listing.address_string && (
                <p class="text-gray-500 mb-3 text-sm">
                  <i class="bi bi-geo-alt mr-1"></i> {listing.address_string}
                </p>
              )}

              <div class="flex flex-wrap gap-2 mb-3">
                <a href={`/listings/${id}`} class="bg-blue-600 text-white text-sm px-3 py-1.5 rounded-lg hover:bg-blue-700 no-underline inline-flex items-center gap-1">
                  <i class="bi bi-eye"></i> View Full Details
                </a>
                <ExportDropdown listingId={id!} />
                <div class="relative">
                  <button id="add-to-haul-btn" type="button"
                    class="bg-amber-500 text-white text-sm px-3 py-1.5 rounded-lg hover:bg-amber-600 inline-flex items-center gap-1 cursor-pointer border-0">
                    <i class="bi bi-box-seam"></i> Add to Haul
                  </button>
                  <div id="haul-picker" class="hidden absolute bg-white border border-gray-200 rounded-lg shadow-lg p-3 z-10 mt-1 w-64 right-0">
                    <div id="haul-picker-list" class="max-h-40 overflow-y-auto"></div>
                    <button id="haul-create-new" type="button"
                      class="w-full text-left text-sm text-blue-600 hover:bg-blue-50 px-2 py-1.5 rounded mt-1 cursor-pointer border-0 bg-transparent inline-flex items-center gap-1">
                      <i class="bi bi-plus-lg"></i> New Haul
                    </button>
                    <div id="haul-picker-status" class="text-xs mt-2 hidden"></div>
                  </div>
                </div>
              </div>

              <SocialShare
                url={Astro.url.toString()}
                title={listing.title || 'Extracted Property'}
                description={listing.description ? listing.description.replace(/<[^>]*>?/gm, '').substring(0, 200) : ''}
              />

              <button class="pws-details-toggle text-sm text-blue-600 cursor-pointer inline-flex items-center gap-1.5 border-0 bg-transparent p-0 mt-2 hover:underline" type="button">
                <i class="bi bi-chevron-down"></i> Show all extracted fields
              </button>

              <div class="hidden mt-3" id="all-fields">
                <table class="w-full text-sm mb-3">
                  <tbody>
                    {attrs.map((attr) => {
                      const val = (listing as any)[attr];
                      if (val == null || val === '' || val === 0 || val === false) return null;
                      const label = attr.replace(/_/g, ' ').replace(/\b\w/g, (c: string) => c.toUpperCase());
                      return (
                        <tr class="even:bg-gray-50">
                          <td class="font-semibold py-1.5 px-2" style="width: 35%;">{label}</td>
                          <td class="py-1.5 px-2">{String(val)}</td>
                        </tr>
                      );
                    })}
                  </tbody>
                </table>

                {imageUrls.length > 0 && (
                  <>
                    <div class="flex items-center gap-3 mb-2">
                      <p class="font-semibold text-sm m-0">{imageUrls.length} image{imageUrls.length === 1 ? '' : 's'} found</p>
                      <button id="enrich-images-btn" type="button" class="text-xs bg-blue-50 text-blue-600 border border-blue-200 px-2.5 py-1 rounded-lg hover:bg-blue-100 transition cursor-pointer inline-flex items-center gap-1">
                        <i class="bi bi-arrow-clockwise"></i> Fetch Image Details
                      </button>
                      <span id="enrich-status" class="text-xs text-gray-500 hidden"></span>
                    </div>
                    <div class="flex flex-wrap gap-2 mb-2">
                      {imageUrls.slice(0, 6).map((img) => (
                        <a href={img.url} target="_blank">
                          <img src={img.url} alt="Property" class="w-20 h-15 object-cover rounded-md border border-gray-200" />
                        </a>
                      ))}
                      {imageUrls.length > 6 && (
                        <span class="inline-block bg-gray-100 text-gray-600 px-2.5 py-1 rounded-full text-xs self-center">+ {imageUrls.length - 6} more</span>
                      )}
                    </div>
                  </>
                )}
              </div>

              {diagnostics && (
                <>
                  <button class="pws-diag-toggle text-sm text-gray-500 cursor-pointer inline-flex items-center gap-1.5 border-0 bg-transparent p-0 mt-3 hover:underline" type="button">
                    <i class="bi bi-chevron-down"></i> Extraction diagnostics
                  </button>

                  <div class="hidden mt-3" id="diagnostics-panel">
                    <div class="text-xs text-gray-500 mb-2">
                      Scraper: <span class="font-mono font-medium">{diagnostics.scraperName}</span> &middot;
                      Grade {diagnostics.qualityGrade} &middot;
                      {diagnostics.populatedExtractableFields}/{diagnostics.extractableFields} extractable fields ({Math.round(diagnostics.extractionRate * 100)}%{weightedPercent != null ? `, weighted ${weightedPercent}%` : ''})
                      &middot; {diagnostics.populatedFields}/{diagnostics.totalFields} total populated
                    </div>

                    {contentAnalysis && (
                      <div class="bg-gray-50 border border-gray-200 text-xs px-3 py-2 rounded mb-3">
                        <strong>Content Analysis:</strong>
                        HTML {Math.round(contentAnalysis.htmlLength / 1024)}KB
                        &middot; {contentAnalysis.jsonLdCount} JSON-LD
                        {contentAnalysis.scriptJsonVarsFound.length > 0 && (
                          <span> &middot; Script vars: {contentAnalysis.scriptJsonVarsFound.join(', ')}</span>
                        )}
                        {contentAnalysis.appearsBlocked && (
                          <span class="text-red-600 font-medium"> &middot; Appears blocked</span>
                        )}
                        {contentAnalysis.appearsJsOnly && (
                          <span class="text-amber-600 font-medium"> &middot; JS-only shell</span>
                        )}
                      </div>
                    )}

                    {diagnostics.emptyFields.length > 0 && (
                      <div class="bg-amber-50 border border-amber-200 text-amber-800 text-xs px-3 py-2 rounded mb-3">
                        <strong>Empty fields:</strong> {diagnostics.emptyFields.join(', ')}
                      </div>
                    )}

                    <div class="overflow-x-auto">
                      <table class="w-full text-xs border border-gray-200 rounded">
                        <thead>
                          <tr class="text-left text-gray-500 bg-gray-50">
                            <th class="py-1.5 px-2 font-medium">Field</th>
                            <th class="py-1.5 px-2 font-medium">Section</th>
                            <th class="py-1.5 px-2 font-medium">Strategy</th>
                            <th class="py-1.5 px-2 font-medium">Raw Text</th>
                            <th class="py-1.5 px-2 font-medium">Value</th>
                          </tr>
                        </thead>
                        <tbody>
                          {diagnostics.fieldTraces.map((trace) => {
                            const isEmpty = trace.rawText === '' || trace.value === 0 || trace.value === false || trace.value === '';
                            return (
                              <tr class={`border-b border-gray-100 ${isEmpty ? 'bg-red-50' : ''}`}>
                                <td class="py-1.5 px-2 font-mono">{trace.field}</td>
                                <td class="py-1.5 px-2 text-gray-500">{trace.section}</td>
                                <td class="py-1.5 px-2 text-gray-500 max-w-[200px] truncate" title={trace.strategy}>{trace.strategy}</td>
                                <td class="py-1.5 px-2 max-w-[200px] truncate" title={trace.rawText}>{trace.rawText || <span class="text-red-400 italic">empty</span>}</td>
                                <td class="py-1.5 px-2 max-w-[200px] truncate" title={String(trace.value)}>{JSON.stringify(trace.value)}</td>
                              </tr>
                            );
                          })}
                        </tbody>
                      </table>
                    </div>
                  </div>
                </>
              )}

              {scrapeRecord && (
                <>
                  <button class="pws-scrape-toggle text-sm text-gray-500 cursor-pointer inline-flex items-center gap-1.5 border-0 bg-transparent p-0 mt-3 hover:underline" type="button">
                    <i class="bi bi-chevron-down"></i> Scrape metadata
                  </button>

                  <div class="hidden mt-3" id="scrape-metadata-panel">
                    <div class="flex flex-wrap gap-2 mb-3">
                      <span class="inline-flex items-center gap-1 bg-blue-50 text-blue-700 text-xs font-medium px-2 py-1 rounded">
                        <i class="bi bi-arrow-down-circle"></i> {scrapeRecord.source_type.replace(/_/g, ' ')}
                      </span>
                      <span class="inline-flex items-center gap-1 bg-gray-100 text-gray-700 text-xs px-2 py-1 rounded">
                        {scrapeRecord.html_size_kb} KB
                      </span>
                      {typeof scrapeRecord.fetch_duration_ms === 'number' && (
                        <span class="inline-flex items-center gap-1 bg-gray-100 text-gray-700 text-xs px-2 py-1 rounded">
                          {scrapeRecord.fetch_duration_ms} ms
                        </span>
                      )}
                      <span class={`inline-flex items-center gap-1 text-xs font-medium px-2 py-1 rounded ${
                        scrapeRecord.render_mode === 'client' ? 'bg-amber-50 text-amber-700'
                        : scrapeRecord.render_mode === 'hybrid' ? 'bg-purple-50 text-purple-700'
                        : 'bg-green-50 text-green-700'
                      }`}>
                        {scrapeRecord.render_mode} rendered
                      </span>
                    </div>

                    {scrapeRecord.technology_stack.length > 0 && (
                      <div class="flex flex-wrap gap-1.5 mb-2">
                        <span class="text-xs text-gray-500">Tech:</span>
                        {scrapeRecord.technology_stack.map((tech) => (
                          <span class="inline-flex items-center bg-indigo-50 text-indigo-700 text-xs px-2 py-0.5 rounded">{tech}</span>
                        ))}
                      </div>
                    )}

                    {scrapeRecord.anti_scraping_signals.length > 0 && (
                      <div class="flex flex-wrap gap-1.5 mb-2">
                        <span class="text-xs text-gray-500">Signals:</span>
                        {scrapeRecord.anti_scraping_signals.map((signal) => (
                          <span class="inline-flex items-center bg-red-50 text-red-700 text-xs px-2 py-0.5 rounded">{signal.replace(/_/g, ' ')}</span>
                        ))}
                      </div>
                    )}
                  </div>
                </>
              )}

              <button class="pws-update-toggle text-sm text-gray-500 cursor-pointer inline-flex items-center gap-1.5 border-0 bg-transparent p-0 mt-3 hover:underline" type="button">
                <i class="bi bi-chevron-down"></i> Re-extract with new HTML
              </button>

              <div class="hidden mt-3" id="update-html-panel">
                <form method="POST" action={`/extract/results/${id}/update-html`}>
                  <input type="hidden" name="import_url" value={(listing as any).import_url || scrapeRecord?.source_url || ''} />
                  <textarea
                    name="html"
                    rows={6}
                    class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm font-mono focus:ring-2 focus:ring-blue-200 focus:border-blue-400 outline-none resize-y mb-2"
                    placeholder="Paste fully-rendered HTML here..."
                  ></textarea>
                  <button type="submit" class="bg-blue-600 text-white text-sm px-4 py-2 rounded-lg hover:bg-blue-700 inline-flex items-center gap-1.5 cursor-pointer">
                    <i class="bi bi-arrow-repeat"></i> Re-extract
                  </button>
                </form>
              </div>
            </div>
          </div>

          <DataBridgeNotice />
        </>
      )}

    </div>
  </div>
</section>

<script is:inline>
document.addEventListener('DOMContentLoaded', () => {
  function setupToggle(btnSelector, targetId) {
    const toggle = document.querySelector(btnSelector);
    const target = document.getElementById(targetId);
    if (toggle && target) {
      toggle.addEventListener('click', () => {
        target.classList.toggle('hidden');
        const icon = toggle.querySelector('i');
        if (icon) {
          icon.classList.toggle('bi-chevron-down');
          icon.classList.toggle('bi-chevron-up');
        }
      });
    }
  }
  setupToggle('.pws-details-toggle', 'all-fields');
  setupToggle('.pws-diag-toggle', 'diagnostics-panel');
  setupToggle('.pws-scrape-toggle', 'scrape-metadata-panel');
  setupToggle('.pws-update-toggle', 'update-html-panel');

  const enrichBtn = document.getElementById('enrich-images-btn');
  const enrichStatus = document.getElementById('enrich-status');
  if (enrichBtn && enrichStatus) {
    enrichBtn.addEventListener('click', async () => {
      enrichBtn.disabled = true;
      enrichBtn.textContent = 'Fetching...';
      enrichStatus.classList.remove('hidden');
      enrichStatus.textContent = '';
      try {
        const listingId = window.location.pathname.split('/').pop();
        const res = await fetch('/public_api/v1/listings/' + listingId + '/enrich-images', { method: 'POST' });
        if (!res.ok) throw new Error('Failed: ' + res.status);
        const data = await res.json();
        const images = data.data?.image_urls || [];
        const enriched = images.filter(function(img) { return img.enriched; });
        enrichStatus.textContent = enriched.length + '/' + images.length + ' images enriched';
        // Update image thumbnails with dimension badges
        const thumbs = document.querySelectorAll('#all-fields .flex.flex-wrap.gap-2 a');
        thumbs.forEach(function(a, i) {
          if (i < images.length && images[i].enriched) {
            var badge = document.createElement('span');
            badge.className = 'text-[10px] bg-gray-800/70 text-white px-1 py-0.5 rounded absolute bottom-0.5 left-0.5';
            var parts = [];
            if (images[i].width && images[i].height) parts.push(images[i].width + 'x' + images[i].height);
            if (images[i].sizeBytes) parts.push(Math.round(images[i].sizeBytes / 1024) + 'KB');
            if (images[i].format) parts.push(images[i].format);
            badge.textContent = parts.join(' ');
            a.style.position = 'relative';
            a.appendChild(badge);
          }
        });
      } catch (e) {
        enrichStatus.textContent = 'Error: ' + e.message;
      }
      enrichBtn.textContent = 'Fetch Image Details';
      enrichBtn.disabled = false;
    });
  }
});
</script>

<script is:inline define:vars={{ id, listing: listing ? { title: listing.title, price_string: listing.price_string, import_url: (listing as any).import_url } : null, grade, ratePercent }}>
document.addEventListener('DOMContentLoaded', () => {
  if (typeof window.PwsStorage === 'undefined') return;
  var resultId = id;
  if (!resultId) return;

  if (listing) {
    // Cache result summary (functional, 1hr TTL)
    var hostname = '';
    try { hostname = new URL(listing.import_url || '').hostname; } catch {}
    var summary = {
      id: resultId,
      title: (listing.title || '').slice(0, 80),
      grade: grade,
      price: listing.price_string || '',
      hostname: hostname,
      rate: ratePercent,
      timestamp: new Date().toISOString(),
    };
    window.PwsStorage.set('functional:result-cache:' + resultId, summary);

    // Append to recent-extractions list (max 20, deduped)
    var recent = window.PwsStorage.get('functional:recent-extractions') || [];
    recent = recent.filter(function(r) { return r.id !== resultId; });
    recent.unshift(summary);
    if (recent.length > 20) recent = recent.slice(0, 20);
    window.PwsStorage.set('functional:recent-extractions', recent);

    // Auto-haul: if haul_id is in the URL, upsert into my-hauls
    var haulId = new URLSearchParams(window.location.search).get('haul_id');
    if (haulId) {
      var myHauls = window.PwsStorage.get('functional:my-hauls') || [];
      var now = new Date();
      var entry = {
        id: haulId,
        name: null,
        scrapeCount: 1,
        lastVisited: now.toISOString(),
        expiresAt: new Date(now.getTime() + 30 * 24 * 60 * 60 * 1000).toISOString(),
      };
      var existingIdx = myHauls.findIndex(function(h) { return h.id === haulId; });
      if (existingIdx !== -1) {
        entry.name = myHauls[existingIdx].name;
        entry.scrapeCount = (myHauls[existingIdx].scrapeCount || 0) + 1;
        entry.expiresAt = myHauls[existingIdx].expiresAt || entry.expiresAt;
        myHauls[existingIdx] = entry;
      } else {
        myHauls.unshift(entry);
      }
      if (myHauls.length > 20) myHauls = myHauls.slice(0, 20);
      window.PwsStorage.set('functional:my-hauls', myHauls);
    }
  } else {
    // Not-found state: try showing cached data
    var cached = window.PwsStorage.get('functional:result-cache:' + resultId);
    if (cached) {
      var fallback = document.getElementById('cached-result-fallback');
      var content = document.getElementById('cached-result-content');
      if (fallback && content) {
        var parts = [];
        if (cached.title) parts.push('<strong>' + cached.title + '</strong>');
        if (cached.price) parts.push('Price: ' + cached.price);
        if (cached.grade) parts.push('Grade: ' + cached.grade);
        if (cached.rate != null) parts.push('Rate: ' + cached.rate + '%');
        parts.push('<span class="text-xs text-gray-400">Cached ' + new Date(cached.timestamp).toLocaleString() + '</span>');
        content.innerHTML = parts.join('<br>');
        fallback.classList.remove('hidden');
      }
    }
  }
});
</script>

<script is:inline define:vars={{ id }}>
document.addEventListener('DOMContentLoaded', function() {
  var btn = document.getElementById('add-to-haul-btn');
  var picker = document.getElementById('haul-picker');
  var listEl = document.getElementById('haul-picker-list');
  var createBtn = document.getElementById('haul-create-new');
  var statusEl = document.getElementById('haul-picker-status');
  if (!btn || !picker) return;

  function showStatus(msg, isError) {
    if (!statusEl) return;
    statusEl.textContent = msg;
    statusEl.className = 'text-xs mt-2 ' + (isError ? 'text-red-600' : 'text-green-600');
    statusEl.classList.remove('hidden');
  }

  function hideStatus() {
    if (statusEl) statusEl.classList.add('hidden');
  }

  function renderHaulList() {
    if (!listEl) return;
    if (typeof window.PwsStorage === 'undefined') {
      listEl.innerHTML = '<p class="text-xs text-amber-600">Enable functional cookies to use hauls.</p>';
      return;
    }
    var myHauls = window.PwsStorage.get('functional:my-hauls') || [];
    var now = new Date();
    myHauls = myHauls.filter(function(h) { return new Date(h.expiresAt) > now; });
    if (myHauls.length === 0) {
      listEl.innerHTML = '<p class="text-xs text-gray-500 mb-1">No hauls yet. Create one below.</p>';
      return;
    }
    myHauls.sort(function(a, b) { return new Date(b.lastVisited).getTime() - new Date(a.lastVisited).getTime(); });
    var html = '';
    myHauls.forEach(function(h) {
      html += '<button type="button" class="haul-pick-item w-full text-left text-sm px-2 py-1.5 rounded hover:bg-gray-100 cursor-pointer border-0 bg-transparent flex justify-between items-center" data-haul-id="' + h.id + '">';
      html += '<span class="truncate">' + (h.name || h.id) + '</span>';
      html += '<span class="text-xs text-gray-400 ml-2 whitespace-nowrap">' + (h.scrapeCount || 0) + '/20</span>';
      html += '</button>';
    });
    listEl.innerHTML = html;
  }

  // Toggle picker
  btn.addEventListener('click', function(e) {
    e.stopPropagation();
    hideStatus();
    renderHaulList();
    picker.classList.toggle('hidden');
  });

  // Close on outside click
  document.addEventListener('click', function(e) {
    if (!picker.contains(e.target) && e.target !== btn) {
      picker.classList.add('hidden');
    }
  });

  async function addResultToHaul(haulId) {
    showStatus('Adding...', false);
    try {
      var res = await fetch('/ext/v1/hauls/' + haulId + '/add-result', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ resultId: id }),
      });
      var data = await res.json();
      if (!res.ok) throw new Error(data.error?.message || 'Failed');
      // Update local haul entry
      if (typeof window.PwsStorage !== 'undefined') {
        var myHauls = window.PwsStorage.get('functional:my-hauls') || [];
        var entry = myHauls.find(function(h) { return h.id === haulId; });
        if (entry) {
          entry.scrapeCount = (entry.scrapeCount || 0) + (data.replaced ? 0 : 1);
          entry.lastVisited = new Date().toISOString();
          window.PwsStorage.set('functional:my-hauls', myHauls);
        }
      }
      showStatus('Added to ' + haulId, false);
      setTimeout(function() { picker.classList.add('hidden'); }, 1500);
    } catch (err) {
      showStatus(err.message || 'Failed to add', true);
    }
  }

  // Delegate click on haul items
  if (listEl) {
    listEl.addEventListener('click', function(e) {
      var item = e.target.closest('.haul-pick-item');
      if (item) addResultToHaul(item.dataset.haulId);
    });
  }

  // Create new haul then add
  if (createBtn) {
    createBtn.addEventListener('click', async function() {
      showStatus('Creating haul...', false);
      try {
        var res = await fetch('/ext/v1/hauls', { method: 'POST' });
        var data = await res.json();
        if (!res.ok) throw new Error(data.error?.message || 'Failed');
        var haulId = data.haul_id;
        // Save to my-hauls
        if (typeof window.PwsStorage !== 'undefined') {
          var myHauls = window.PwsStorage.get('functional:my-hauls') || [];
          myHauls.unshift({
            id: haulId,
            expiresAt: new Date(Date.now() + 30 * 24 * 60 * 60 * 1000).toISOString(),
            lastVisited: new Date().toISOString(),
            scrapeCount: 0,
            name: null,
          });
          window.PwsStorage.set('functional:my-hauls', myHauls);
        }
        await addResultToHaul(haulId);
        renderHaulList();
      } catch (err) {
        showStatus(err.message || 'Failed to create haul', true);
      }
    });
  }
});
</script>

