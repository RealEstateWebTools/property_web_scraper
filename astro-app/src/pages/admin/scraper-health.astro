---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { authenticateAdmin } from '@lib/services/admin-auth.js';

const auth = authenticateAdmin(Astro.request);
if (!auth.authorized) return Astro.redirect('/admin/login');
---
<AdminLayout title="Scraper Health — Admin" activePage="scraper-health">
  <h1 class="text-2xl font-bold mb-2">Scraper Health Dashboard</h1>
  <p class="text-sm text-gray-500 mb-6">Runs each scraper against its test fixture and reports extraction quality.</p>

  <!-- Loading -->
  <div id="loading" class="text-center py-12">
    <div class="inline-block animate-spin rounded-full h-8 w-8 border-4 border-blue-600 border-t-transparent"></div>
    <p class="mt-3 text-sm text-gray-500">Running extraction tests...</p>
  </div>

  <!-- Summary cards -->
  <div id="summary" class="hidden grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-6 gap-4 mb-8">
    <div class="bg-white rounded-lg shadow p-5">
      <p class="text-sm text-gray-500">Total Scrapers</p>
      <p class="text-2xl font-bold" id="total-count">—</p>
    </div>
    <div class="bg-white rounded-lg shadow p-5">
      <p class="text-sm text-gray-500">With Fixtures</p>
      <p class="text-2xl font-bold" id="fixture-count">—</p>
    </div>
    <div class="bg-white rounded-lg shadow p-5">
      <p class="text-sm text-gray-500">Tier Distribution</p>
      <p class="text-sm font-semibold mt-1" id="tier-distribution">—</p>
    </div>
    <div class="bg-white rounded-lg shadow p-5">
      <p class="text-sm text-gray-500">Grade A</p>
      <p class="text-2xl font-bold text-green-600" id="grade-a-count">—</p>
    </div>
    <div class="bg-white rounded-lg shadow p-5">
      <p class="text-sm text-gray-500">Grade B</p>
      <p class="text-2xl font-bold text-blue-600" id="grade-b-count">—</p>
    </div>
    <div class="bg-white rounded-lg shadow p-5">
      <p class="text-sm text-gray-500">Grade C/F</p>
      <p class="text-2xl font-bold text-red-600" id="grade-cf-count">—</p>
    </div>
  </div>

  <!-- Results table -->
  <div id="results" class="hidden bg-white rounded-lg shadow">
    <div class="px-5 py-4 border-b border-gray-200 flex items-center justify-between">
      <h2 class="font-semibold">Scraper Health Results</h2>
      <button
        id="refresh-btn"
        class="px-3 py-1 bg-blue-600 text-white rounded text-xs font-medium hover:bg-blue-700 transition"
      >
        Refresh
      </button>
    </div>
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead>
          <tr class="text-left text-gray-500 border-b border-gray-200">
            <th class="py-2 px-5 font-medium">Scraper</th>
            <th class="py-2 px-5 font-medium">Country</th>
            <th class="py-2 px-5 font-medium">Tier</th>
            <th class="py-2 px-5 font-medium">Grade</th>
            <th class="py-2 px-5 font-medium">Rate</th>
            <th class="py-2 px-5 font-medium">Expected</th>
            <th class="py-2 px-5 font-medium">vs Expected</th>
            <th class="py-2 px-5 font-medium">Weighted</th>
            <th class="py-2 px-5 font-medium">Fields</th>
            <th class="py-2 px-5 font-medium">Critical Missing</th>
            <th class="py-2 px-5 font-medium">Status</th>
          </tr>
        </thead>
        <tbody id="results-body">
        </tbody>
      </table>
    </div>
  </div>

  <!-- Error -->
  <div id="error" class="hidden bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded text-sm mt-4">
  </div>

  <script>
    function escapeHtml(str: unknown): string {
      return String(str == null ? '' : str)
        .replace(/&/g, '&amp;')
        .replace(/</g, '&lt;')
        .replace(/>/g, '&gt;')
        .replace(/"/g, '&quot;')
        .replace(/'/g, '&#39;');
    }

    const gradeColors: Record<string, string> = {
      A: 'bg-green-100 text-green-700',
      B: 'bg-blue-100 text-blue-700',
      C: 'bg-amber-100 text-amber-700',
      F: 'bg-red-100 text-red-700',
    };

    const tierColors: Record<string, string> = {
      core: 'bg-green-100 text-green-700',
      experimental: 'bg-blue-100 text-blue-700',
      'manual-only': 'bg-gray-100 text-gray-600',
    };

    async function loadHealth() {
      const loadingEl = document.getElementById('loading')!;
      const summaryEl = document.getElementById('summary')!;
      const resultsEl = document.getElementById('results')!;
      const errorEl = document.getElementById('error')!;
      const bodyEl = document.getElementById('results-body')!;

      loadingEl.classList.remove('hidden');
      summaryEl.classList.add('hidden');
      resultsEl.classList.add('hidden');
      errorEl.classList.add('hidden');

      try {
        const res = await fetch('/admin/api/scraper-health');
        if (!res.ok) {
          const data = await res.json().catch(() => ({ error: 'Request failed' }));
          errorEl.textContent = data.error || `HTTP ${res.status}`;
          errorEl.classList.remove('hidden');
          loadingEl.classList.add('hidden');
          return;
        }

        const data = await res.json();
        const results: any[] = data.results || [];

        // Summary
        const withFixtures = results.filter((r: any) => r.hasFixture);
        const gradeA = withFixtures.filter((r: any) => r.grade === 'A');
        const gradeB = withFixtures.filter((r: any) => r.grade === 'B');
        const gradeCF = withFixtures.filter((r: any) => r.grade === 'C' || r.grade === 'F' || r.error);

        const coreCount = results.filter((r: any) => r.supportTier === 'core').length;
        const experimentalCount = results.filter((r: any) => r.supportTier === 'experimental').length;
        const manualOnlyCount = results.filter((r: any) => r.supportTier === 'manual-only').length;

        document.getElementById('total-count')!.textContent = String(results.length);
        document.getElementById('fixture-count')!.textContent = String(withFixtures.length);
        document.getElementById('tier-distribution')!.innerHTML =
          `<span class="text-green-600">${coreCount} core</span>, ` +
          `<span class="text-blue-600">${experimentalCount} experimental</span>, ` +
          `<span class="text-gray-500">${manualOnlyCount} manual-only</span>`;
        document.getElementById('grade-a-count')!.textContent = String(gradeA.length);
        document.getElementById('grade-b-count')!.textContent = String(gradeB.length);
        document.getElementById('grade-cf-count')!.textContent = String(gradeCF.length);

        // Table rows
        bodyEl.innerHTML = '';
        for (const r of results) {
          const tr = document.createElement('tr');
          tr.className = 'border-b border-gray-100 hover:bg-gray-50';

          // Scraper name
          const tdName = document.createElement('td');
          tdName.className = 'py-2 px-5';
          const link = document.createElement('a');
          link.href = `/admin/scrapers/${r.name}`;
          link.className = 'font-mono text-sm text-blue-600 hover:underline no-underline';
          link.textContent = r.name;
          tdName.appendChild(link);
          if (r.consecutiveBelowThreshold != null && r.consecutiveBelowThreshold >= 5) {
            const warn = document.createElement('span');
            warn.className = 'inline-block ml-1.5 px-1.5 py-0.5 rounded text-xs font-medium bg-amber-100 text-amber-700';
            warn.title = `${r.consecutiveBelowThreshold} consecutive scrapes below quality threshold`;
            warn.textContent = 'degraded';
            tdName.appendChild(warn);
          }
          tr.appendChild(tdName);

          // Country
          const tdCountry = document.createElement('td');
          tdCountry.className = 'py-2 px-5 text-gray-600';
          tdCountry.textContent = r.country;
          tr.appendChild(tdCountry);

          // Tier column (always shown)
          const tdTier = document.createElement('td');
          tdTier.className = 'py-2 px-5';
          if (r.supportTier) {
            const tierColor = tierColors[r.supportTier] || 'bg-gray-100 text-gray-500';
            tdTier.innerHTML = `<span class="inline-block px-2 py-0.5 rounded text-xs font-medium ${tierColor}">${escapeHtml(r.supportTier)}</span>`;
          } else {
            tdTier.innerHTML = '<span class="text-gray-400 text-xs">—</span>';
          }
          tr.appendChild(tdTier);

          if (!r.hasFixture) {
            // No fixture
            const tdGrade = document.createElement('td');
            tdGrade.className = 'py-2 px-5';
            tdGrade.colSpan = 7;
            tdGrade.innerHTML = '<span class="text-gray-400 text-xs">No fixture available</span>';
            tr.appendChild(tdGrade);

            const tdStatus = document.createElement('td');
            tdStatus.className = 'py-2 px-5';
            tdStatus.innerHTML = '<span class="inline-block px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-500">no fixture</span>';
            tr.appendChild(tdStatus);
          } else if (r.error) {
            const tdErr = document.createElement('td');
            tdErr.className = 'py-2 px-5';
            tdErr.colSpan = 7;
            tdErr.innerHTML = `<span class="text-red-600 text-xs">${escapeHtml(r.error)}</span>`;
            tr.appendChild(tdErr);

            const tdStatus = document.createElement('td');
            tdStatus.className = 'py-2 px-5';
            tdStatus.innerHTML = '<span class="inline-block px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-700">error</span>';
            tr.appendChild(tdStatus);
          } else {
            // Grade
            const tdGrade = document.createElement('td');
            tdGrade.className = 'py-2 px-5';
            const colorClass = gradeColors[r.grade] || gradeColors.F;
            tdGrade.innerHTML = `<span class="inline-block px-2 py-0.5 rounded text-xs font-semibold ${colorClass}">${escapeHtml(r.grade)} — ${escapeHtml(r.label)}</span>`;
            tr.appendChild(tdGrade);

            // Rate
            const tdRate = document.createElement('td');
            tdRate.className = 'py-2 px-5 text-gray-600';
            tdRate.textContent = r.extractionRate != null ? `${Math.round(r.extractionRate * 100)}%` : '—';
            tr.appendChild(tdRate);

            // Expected
            const tdExpected = document.createElement('td');
            tdExpected.className = 'py-2 px-5 text-gray-600';
            tdExpected.textContent = r.expectedExtractionRate != null ? `${Math.round(r.expectedExtractionRate * 100)}%` : '—';
            tr.appendChild(tdExpected);

            // vs Expected
            const tdVsExpected = document.createElement('td');
            tdVsExpected.className = 'py-2 px-5';
            if (r.meetsExpectation === true) {
              tdVsExpected.innerHTML = '<span class="inline-block px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-700">meets</span>';
            } else if (r.meetsExpectation === false) {
              tdVsExpected.innerHTML = '<span class="inline-block px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-700">below</span>';
            } else {
              tdVsExpected.innerHTML = '<span class="text-gray-400 text-xs">—</span>';
            }
            tr.appendChild(tdVsExpected);

            // Weighted rate
            const tdWeighted = document.createElement('td');
            tdWeighted.className = 'py-2 px-5 text-gray-600';
            tdWeighted.textContent = r.weightedRate != null ? `${Math.round(r.weightedRate * 100)}%` : '—';
            tr.appendChild(tdWeighted);

            // Fields
            const tdFields = document.createElement('td');
            tdFields.className = 'py-2 px-5 text-gray-600';
            tdFields.textContent = `${r.populatedFields}/${r.totalFields}`;
            tr.appendChild(tdFields);

            // Critical missing
            const tdCritical = document.createElement('td');
            tdCritical.className = 'py-2 px-5';
            if (r.criticalFieldsMissing && r.criticalFieldsMissing.length > 0) {
              tdCritical.innerHTML = r.criticalFieldsMissing
                .map((f: string) => `<span class="inline-block px-1.5 py-0.5 mr-1 mb-0.5 rounded text-xs bg-red-50 text-red-600 font-mono">${escapeHtml(f)}</span>`)
                .join('');
            } else {
              tdCritical.innerHTML = '<span class="text-green-600 text-xs">✓ none</span>';
            }
            tr.appendChild(tdCritical);

            // Status
            const tdStatus = document.createElement('td');
            tdStatus.className = 'py-2 px-5';
            if (r.grade === 'A') {
              tdStatus.innerHTML = '<span class="inline-block px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-700">healthy</span>';
            } else if (r.grade === 'B') {
              tdStatus.innerHTML = '<span class="inline-block px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-700">good</span>';
            } else {
              tdStatus.innerHTML = '<span class="inline-block px-2 py-0.5 rounded text-xs font-medium bg-amber-100 text-amber-700">needs work</span>';
            }
            tr.appendChild(tdStatus);
          }

          bodyEl.appendChild(tr);
        }

        loadingEl.classList.add('hidden');
        summaryEl.classList.remove('hidden');
        resultsEl.classList.remove('hidden');
      } catch (err) {
        errorEl.textContent = 'Network error: ' + (err instanceof Error ? err.message : String(err));
        errorEl.classList.remove('hidden');
        loadingEl.classList.add('hidden');
      }
    }

    // Load on page ready
    loadHealth();

    // Refresh button
    document.getElementById('refresh-btn')?.addEventListener('click', loadHealth);
  </script>
</AdminLayout>
