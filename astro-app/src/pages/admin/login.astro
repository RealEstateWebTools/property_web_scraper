---
import '../../styles/global.css';
import { validateAdminKey, buildAdminCookie } from '@lib/services/admin-auth.js';

let errorMessage = '';

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const key = formData.get('admin_key') as string || '';

  if (validateAdminKey(key)) {
    return new Response(null, {
      status: 302,
      headers: {
        'Location': '/admin',
        'Set-Cookie': buildAdminCookie(key),
      },
    });
  } else {
    errorMessage = 'Invalid admin key';
  }
}
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Login â€” Property Web Scraper</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen flex items-center justify-center bg-gray-100 font-sans">
    <div class="w-full max-w-sm">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="text-center mb-6">
          <i class="bi bi-gear-fill text-3xl text-gray-700"></i>
          <h1 class="text-xl font-bold mt-2">Admin Login</h1>
          <p class="text-sm text-gray-500 mt-1">Property Web Scraper</p>
        </div>

        {errorMessage && (
          <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4 text-sm">
            {errorMessage}
          </div>
        )}

        <form method="POST">
          <label class="block text-sm font-medium text-gray-700 mb-1" for="admin_key">
            Admin Key
          </label>
          <input
            type="password"
            id="admin_key"
            name="admin_key"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm"
            placeholder="Enter your admin key"
          />
          <button
            type="submit"
            class="w-full mt-4 bg-blue-600 text-white py-2 px-4 rounded font-medium text-sm hover:bg-blue-700 transition"
          >
            Login
          </button>
        </form>

        <div class="mt-4 text-center">
          <a href="/" class="text-sm text-gray-500 hover:text-blue-600 no-underline transition">
            &larr; Back to site
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
