---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getHaul } from '../lib/services/haul-store.js';
import { parseCookie } from '../lib/services/web-haul-resolver.js';

const cookieHeader = Astro.request.headers.get('cookie') || '';
const cookieHaulId = parseCookie(cookieHeader, 'pws_haul_id');

let activeHaul: Awaited<ReturnType<typeof getHaul>> | undefined;
if (cookieHaulId) {
  try {
    activeHaul = await getHaul(cookieHaulId);
  } catch {
    // Firestore unavailable ‚Äî fall through to client-side only
  }
}
---
<BaseLayout title="My Hauls">

<section class="max-w-4xl mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">üì¶ My Hauls</h1>
      <p class="text-sm text-gray-500 mt-1">Hauls you've visited, stored locally in your browser.</p>
    </div>
    <button id="create-haul-btn" type="button"
      class="bg-blue-600 text-white text-sm px-4 py-2 rounded-lg hover:bg-blue-700 inline-flex items-center gap-1.5 cursor-pointer border-0">
      <i class="bi bi-plus-lg"></i> New Haul
    </button>
  </div>

  {activeHaul && (
    <div class="mb-6">
      <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Active Haul</h2>
      <div class="grid gap-4 sm:grid-cols-2">
        <a href={`/haul/${activeHaul.id}`} class="block bg-white rounded-xl shadow-sm border-2 border-blue-200 p-5 hover:shadow-md transition-shadow no-underline">
          <div class="flex items-center justify-between mb-2">
            <h3 class="font-semibold text-gray-900 text-sm truncate">
              {activeHaul.name || `üì¶ ${activeHaul.id}`}
            </h3>
            <span class="text-xs text-blue-600 font-medium whitespace-nowrap ml-2">
              {Math.max(0, Math.ceil((new Date(activeHaul.expiresAt).getTime() - Date.now()) / (1000 * 60 * 60 * 24)))}d left
            </span>
          </div>
          <p class="text-xs text-gray-500">
            {activeHaul.scrapes.length} scrape{activeHaul.scrapes.length !== 1 ? 's' : ''}
          </p>
          {!activeHaul.name && (
            <p class="text-xs text-gray-400 font-mono mt-1 truncate">{activeHaul.id}</p>
          )}
        </a>
      </div>
    </div>
  )}

  <div id="hauls-list"></div>

  <div id="hauls-empty" class="hidden bg-gray-50 rounded-2xl p-8 text-center">
    <div class="text-4xl mb-3">üì¶</div>
    <h3 class="font-semibold text-gray-700 mb-2">No hauls found</h3>
    <p class="text-gray-500 text-sm mb-4">
      Create a haul using the button above, or collect listings with the
      <a href="/extension" class="text-blue-600 hover:underline">Chrome extension</a>.
    </p>
    <p class="text-xs text-gray-400">
      <i class="bi bi-info-circle mr-1"></i> Requires functional cookies to be accepted.
    </p>
  </div>

  <div id="limit-reached-banner" class="hidden bg-blue-50 border border-blue-100 rounded-2xl p-6 mb-6">
    <div class="flex items-start gap-3">
      <span class="text-2xl">üîí</span>
      <div>
        <h3 class="font-semibold text-blue-900 mb-1">Free haul limit reached</h3>
        <p class="text-sm text-blue-800 mb-3">
          Anonymous visitors can create one free haul. Sign up for a free account to create unlimited hauls.
        </p>
        <a href="/signup" class="inline-flex items-center gap-1.5 bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold px-4 py-2 rounded-lg no-underline transition-colors">
          Create Free Account ‚Üí
        </a>
      </div>
    </div>
  </div>

  <div id="no-consent" class="hidden bg-amber-50 rounded-2xl p-8 text-center">
    <div class="text-4xl mb-3">üç™</div>
    <h3 class="font-semibold text-amber-900 mb-2">Functional cookies required</h3>
    <p class="text-amber-800 text-sm">
      My Hauls uses functional localStorage to remember your hauls.
      Please accept functional cookies in the consent banner to use this feature.
    </p>
  </div>
</section>

<script is:inline define:vars={{ activeHaulId: activeHaul?.id ?? '' }}>
document.addEventListener('DOMContentLoaded', function() {
  var serverHaulId = activeHaulId;
  var hasServerHaul = !!serverHaulId;

  // Create Haul button
  var createBtn = document.getElementById('create-haul-btn');
  if (createBtn) {
    createBtn.addEventListener('click', async function() {
      createBtn.disabled = true;
      createBtn.textContent = 'Creating...';
      try {
        var res = await fetch('/ext/v1/hauls', { method: 'POST' });
        var data = await res.json();
        if (!res.ok) {
          if (data.error?.code === 'HAUL_LIMIT_REACHED') {
            createBtn.innerHTML = '<i class="bi bi-plus-lg"></i> New Haul';
            createBtn.disabled = false;
            document.getElementById('limit-reached-banner').classList.remove('hidden');
            return;
          }
          throw new Error(data.error?.message || 'Failed to create haul');
        }
        var haulId = data.haul_id;
        // Save to my-hauls in PwsStorage
        if (typeof window.PwsStorage !== 'undefined') {
          var myHauls = window.PwsStorage.get('functional:my-hauls') || [];
          myHauls.unshift({
            id: haulId,
            expiresAt: new Date(Date.now() + 30 * 24 * 60 * 60 * 1000).toISOString(),
            lastVisited: new Date().toISOString(),
            scrapeCount: 0,
            name: null,
          });
          window.PwsStorage.set('functional:my-hauls', myHauls);
        }
        window.location.href = '/haul/' + haulId;
      } catch (err) {
        createBtn.innerHTML = '<i class="bi bi-plus-lg"></i> New Haul';
        createBtn.disabled = false;
        // Show error inline
        var errEl = document.createElement('span');
        errEl.className = 'text-red-600 text-xs ml-2';
        errEl.textContent = err.message || 'Failed to create haul';
        createBtn.parentNode.appendChild(errEl);
        setTimeout(function() { errEl.remove(); }, 4000);
      }
    });
  }

  var listEl = document.getElementById('hauls-list');
  var emptyEl = document.getElementById('hauls-empty');
  var noConsentEl = document.getElementById('no-consent');

  if (typeof window.PwsStorage === 'undefined') {
    // Only show no-consent banner if there's no server-rendered haul
    if (!hasServerHaul && noConsentEl) noConsentEl.classList.remove('hidden');
    return;
  }

  var myHauls = window.PwsStorage.get('functional:my-hauls');
  if (!myHauls || myHauls.length === 0) {
    if (!hasServerHaul && emptyEl) emptyEl.classList.remove('hidden');
    return;
  }

  // Filter out expired hauls and the server-rendered active haul (avoid duplicate)
  var now = new Date();
  myHauls = myHauls.filter(function(h) {
    if (serverHaulId && h.id === serverHaulId) return false;
    return new Date(h.expiresAt) > now;
  });

  if (myHauls.length === 0) {
    // Don't show empty state if server already rendered the active haul
    if (!hasServerHaul && emptyEl) emptyEl.classList.remove('hidden');
    return;
  }

  // Sort by lastVisited descending
  myHauls.sort(function(a, b) {
    return new Date(b.lastVisited).getTime() - new Date(a.lastVisited).getTime();
  });

  var heading = hasServerHaul ? '<h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Other Hauls</h2>' : '';
  var html = heading + '<div class="grid gap-4 sm:grid-cols-2">';
  myHauls.forEach(function(h) {
    var daysLeft = Math.max(0, Math.ceil((new Date(h.expiresAt).getTime() - now.getTime()) / (1000 * 60 * 60 * 24)));
    var visited = new Date(h.lastVisited).toLocaleDateString();
    html += '<a href="/haul/' + h.id + '" class="block bg-white rounded-xl shadow-sm border border-gray-100 p-5 hover:shadow-md transition-shadow no-underline">';
    html += '<div class="flex items-center justify-between mb-2">';
    html += '<h3 class="font-semibold text-gray-900 text-sm truncate">' + (h.name || 'üì¶ ' + h.id) + '</h3>';
    html += '<span class="text-xs text-gray-400 whitespace-nowrap ml-2">' + daysLeft + 'd left</span>';
    html += '</div>';
    html += '<p class="text-xs text-gray-500">';
    html += h.scrapeCount + ' scrape' + (h.scrapeCount !== 1 ? 's' : '') + ' ¬∑ Last visited ' + visited;
    html += '</p>';
    if (!h.name) {
      html += '<p class="text-xs text-gray-400 font-mono mt-1 truncate">' + h.id + '</p>';
    }
    html += '</a>';
  });
  html += '</div>';

  if (listEl) listEl.innerHTML = html;
});
</script>

</BaseLayout>
