<script is:inline define:vars={{ id }}>
document.addEventListener('DOMContentLoaded', function() {
  function escapeHtml(str) {
    return String(str == null ? '' : str)
      .replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;')
      .replace(/"/g, '&quot;').replace(/'/g, '&#39;');
  }

  const btn = document.getElementById('add-to-haul-btn');
  const picker = document.getElementById('haul-picker');
  const listEl = document.getElementById('haul-picker-list');
  const createBtn = document.getElementById('haul-create-new');
  const statusEl = document.getElementById('haul-picker-status');
  if (!btn || !picker) return;

  function showStatus(msg, isError) {
    if (!statusEl) return;
    statusEl.textContent = msg;
    statusEl.className = 'text-xs mt-2 ' + (isError ? 'text-red-600' : 'text-green-600');
    statusEl.classList.remove('hidden');
  }

  function renderHaulList() {
    if (!listEl) return;
    if (typeof window.PwsStorage === 'undefined') {
      listEl.innerHTML = '<p class="text-xs text-amber-600">Enable functional cookies to use hauls.</p>';
      return;
    }
    let myHauls = window.PwsStorage.get('functional:my-hauls') || [];
    const now = new Date();
    myHauls = myHauls.filter(h => new Date(h.expiresAt) > now);
    if (myHauls.length === 0) {
      listEl.innerHTML = '<p class="text-xs text-gray-500 mb-1">No hauls yet. Create one below.</p>';
      return;
    }
    myHauls.sort((a, b) => new Date(b.lastVisited).getTime() - new Date(a.lastVisited).getTime());
    listEl.innerHTML = myHauls.map(h =>
      `<button type="button" class="haul-pick-item w-full text-left text-sm px-2 py-1.5 rounded hover:bg-gray-100 cursor-pointer border-0 bg-transparent flex justify-between items-center" data-haul-id="${escapeHtml(h.id)}">
        <span class="truncate">${escapeHtml(h.name || h.id)}</span>
        <span class="text-xs text-gray-400 ml-2 whitespace-nowrap">${escapeHtml(h.scrapeCount || 0)}/20</span>
      </button>`
    ).join('');
  }

  btn.addEventListener('click', function(e) {
    e.stopPropagation();
    statusEl?.classList.add('hidden');
    renderHaulList();
    picker.classList.toggle('hidden');
  });
  document.addEventListener('click', function(e) {
    if (!picker.contains(e.target) && e.target !== btn) picker.classList.add('hidden');
  });

  async function addResultToHaul(haulId) {
    showStatus('Adding...', false);
    try {
      const res = await fetch('/ext/v1/hauls/' + haulId + '/add-result', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ resultId: id }),
      });
      const data = await res.json();
      if (!res.ok) throw new Error(data.error?.message || 'Failed');
      if (typeof window.PwsStorage !== 'undefined') {
        const myHauls = window.PwsStorage.get('functional:my-hauls') || [];
        const entry = myHauls.find(h => h.id === haulId);
        if (entry) {
          entry.scrapeCount = (entry.scrapeCount || 0) + (data.replaced ? 0 : 1);
          entry.lastVisited = new Date().toISOString();
          window.PwsStorage.set('functional:my-hauls', myHauls);
        }
      }
      showStatus('Added!', false);
      setTimeout(() => picker.classList.add('hidden'), 1500);
    } catch (err) {
      showStatus(err.message || 'Failed', true);
    }
  }

  listEl?.addEventListener('click', function(e) {
    const item = e.target.closest('.haul-pick-item');
    if (item) addResultToHaul(item.dataset.haulId);
  });

  createBtn?.addEventListener('click', async function() {
    showStatus('Creating haul...', false);
    try {
      const res = await fetch('/ext/v1/hauls', { method: 'POST' });
      const data = await res.json();
      if (!res.ok) throw new Error(data.error?.message || 'Failed');
      const haulId = data.haul_id;
      if (typeof window.PwsStorage !== 'undefined') {
        const myHauls = window.PwsStorage.get('functional:my-hauls') || [];
        myHauls.unshift({
          id: haulId, expiresAt: new Date(Date.now() + 30 * 24 * 60 * 60 * 1000).toISOString(),
          lastVisited: new Date().toISOString(), scrapeCount: 0, name: null,
        });
        window.PwsStorage.set('functional:my-hauls', myHauls);
      }
      await addResultToHaul(haulId);
      renderHaulList();
    } catch (err) {
      showStatus(err.message || 'Failed to create haul', true);
    }
  });
});
</script>

