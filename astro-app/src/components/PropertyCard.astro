---
interface Props {
  listing: any;
  imageUrls: string[];
}
const { listing, imageUrls } = Astro.props;
const attrs = [
  'reference', 'title', 'description', 'price_string', 'price_float',
  'area_unit', 'address_string', 'currency', 'country', 'longitude',
  'latitude', 'main_image_url', 'for_rent', 'for_sale',
  'count_bedrooms', 'count_bathrooms',
];
---
<div class="pws-success-banner">
  <i class="bi bi-check-circle-fill"></i>
  Property data extracted successfully
</div>

<div class="card pws-result-card">
  {imageUrls.length > 0 && imageUrls[0] && (
    <img src={imageUrls[0]} alt="Property image" class="pws-result-image" />
  )}

  <div class="card-body">
    {listing.title && <h5 class="pws-result-title">{listing.title}</h5>}

    <div class="pws-stat-row">
      {listing.price_string && (
        <span class="pws-stat pws-stat-price">
          <i class="bi bi-tag-fill"></i> {listing.price_string} {listing.currency || ''}
        </span>
      )}
      {listing.count_bedrooms > 0 && (
        <span class="pws-stat"><i class="bi bi-door-open"></i> {listing.count_bedrooms} beds</span>
      )}
      {listing.count_bathrooms > 0 && (
        <span class="pws-stat"><i class="bi bi-droplet"></i> {listing.count_bathrooms} baths</span>
      )}
      {listing.constructed_area > 0 && (
        <span class="pws-stat"><i class="bi bi-arrows-angle-expand"></i> {listing.constructed_area} {listing.area_unit}</span>
      )}
      {listing.for_sale && <span class="pws-stat"><i class="bi bi-house"></i> For Sale</span>}
      {listing.for_rent && <span class="pws-stat"><i class="bi bi-key"></i> For Rent</span>}
    </div>

    {listing.address_string && (
      <p class="text-muted mb-3">
        <i class="bi bi-geo-alt me-1"></i> {listing.address_string}
      </p>
    )}

    <div class="d-flex flex-wrap gap-2 mb-3">
      <a href={`/single_property_view?url=${encodeURIComponent(listing.import_url || '')}`} class="btn btn-primary btn-sm">
        <i class="bi bi-eye me-1"></i> View Full Details
      </a>
      <a href={`/retriever/as_json?url=${encodeURIComponent(listing.import_url || '')}`} class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-braces me-1"></i> Get JSON
      </a>
    </div>

    <button class="pws-details-toggle" type="button" data-bs-toggle="collapse" data-bs-target="#all-fields" aria-expanded="false">
      <i class="bi bi-chevron-down"></i> Show all extracted fields
    </button>

    <div class="collapse mt-3" id="all-fields">
      <table class="table table-sm table-striped mb-3">
        <tbody>
          {attrs.map((attr) => {
            const val = listing[attr];
            if (val == null || val === '' || val === 0 || val === false) return null;
            const label = attr.replace(/_/g, ' ').replace(/\b\w/g, (c: string) => c.toUpperCase());
            return (
              <tr>
                <td class="fw-semibold" style="width: 35%;">{label}</td>
                <td>{String(val)}</td>
              </tr>
            );
          })}
        </tbody>
      </table>

      {imageUrls.length > 0 && (
        <>
          <p class="fw-semibold mb-2">{imageUrls.length} image{imageUrls.length === 1 ? '' : 's'} found</p>
          <div class="d-flex flex-wrap gap-2 mb-2">
            {imageUrls.slice(0, 6).map((imgUrl) => (
              <a href={imgUrl} target="_blank">
                <img src={imgUrl} alt="Property" style="width: 80px; height: 60px; object-fit: cover; border-radius: 0.35rem; border: 1px solid #ddd;" />
              </a>
            ))}
            {imageUrls.length > 6 && (
              <span class="pws-site-badge align-self-center">+ {imageUrls.length - 6} more</span>
            )}
          </div>
        </>
      )}
    </div>
  </div>
</div>
