---
interface Props {
  title?: string;
}
const { title = 'Property Web Scraper' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet" />
    <link href="/css/application.css" rel="stylesheet" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
      <div class="container">
        <a class="navbar-brand fw-bold" href="/">
          <i class="bi bi-building me-1"></i> PropertyWebScraper
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#bd-main-nav" aria-controls="bd-main-nav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="bd-main-nav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link" href="/#try-it">Extract</a>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="https://github.com/RealEstateWebTools/property_web_scraper" target="_blank">
                <i class="bi bi-github"></i> GitHub
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <footer class="bg-light text-muted py-4 mt-5 border-top">
      <div class="container text-center">
        <p class="mb-1">
          <a href="https://github.com/RealEstateWebTools/property_web_scraper" target="_blank" class="text-muted text-decoration-none">
            <i class="bi bi-github me-1"></i> PropertyWebScraper
          </a>
          &middot;
          Open-source property data extraction by the
          <a href="https://github.com/etewiah/property_web_builder" target="_blank">PropertyWebBuilder</a> team.
        </p>
      </div>
    </footer>

    <script is:inline src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  </body>
</html>
