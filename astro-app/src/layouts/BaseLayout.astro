---
import '../styles/global.css';
import NavBar from '../components/NavBar.astro';
import ConsentBanner from '../components/ConsentBanner.astro';
interface Props {
  title?: string;
}
const { title = 'Property Web Scraper' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen flex flex-col bg-surface text-text-body font-sans">
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:z-50 focus:px-4 focus:py-2 focus:bg-primary focus:text-white">Skip to content</a>

    <NavBar />

    <main id="main-content" class="flex-1">
      <slot />
    </main>

    <footer class="bg-surface-secondary text-text-secondary py-4 mt-5 border-t border-border">
      <div class="max-w-6xl mx-auto px-4 text-center">
        <p class="mb-1 text-sm">
          <a href="https://github.com/RealEstateWebTools/property_web_scraper" target="_blank" class="text-text-secondary no-underline hover:text-primary transition">
            <i class="bi bi-github mr-1"></i> PropertyWebScraper
          </a>
          &middot;
          Open-source property data extraction by the
          <a href="https://github.com/etewiah/property_web_builder" target="_blank" class="text-primary hover:underline">PropertyWebBuilder</a> team.
          &middot;
          <a href="/privacy" class="text-text-secondary hover:text-primary transition no-underline">Privacy</a>
          &middot;
          <a href="/terms" class="text-text-secondary hover:text-primary transition no-underline">Terms</a>
        </p>
      </div>
    </footer>

    <ConsentBanner />

    <script>
      import {
        pwsGet,
        pwsSet,
        pwsRemove,
        pwsPurgeCategory,
        pwsPurgeAll,
        pwsPruneExpired,
        pwsListKeys,
        pwsExportAll,
      } from '../lib/client/storage-consent.js';
      import {
        getConsentState,
        setConsentState,
        hasConsentFor,
        resetConsent,
      } from '../lib/client/consent-state.js';

      // Expose on window so is:inline page scripts can use them
      (window as any).PwsStorage = {
        get: pwsGet,
        set: pwsSet,
        remove: pwsRemove,
        purgeCategory: pwsPurgeCategory,
        purgeAll: pwsPurgeAll,
        pruneExpired: pwsPruneExpired,
        listKeys: pwsListKeys,
        exportAll: pwsExportAll,
      };
      (window as any).PwsConsent = {
        getState: getConsentState,
        setState: setConsentState,
        hasConsentFor,
        reset: resetConsent,
      };

      // Prune expired entries on every page load
      pwsPruneExpired();

      // Show/hide consent banner
      const banner = document.getElementById('pws-consent-banner');
      if (banner && !getConsentState()) {
        banner.classList.remove('hidden');
      }

      const allowBtn = document.getElementById('pws-consent-allow');
      const denyBtn = document.getElementById('pws-consent-deny');

      allowBtn?.addEventListener('click', () => {
        setConsentState('granted');
        banner?.classList.add('hidden');
      });

      denyBtn?.addEventListener('click', () => {
        setConsentState('denied');
        banner?.classList.add('hidden');
      });
    </script>
  </body>
</html>
