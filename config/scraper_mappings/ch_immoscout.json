[{
  "name": "ch_immoscout",
  "expectedExtractionRate": 0.65,

  // immoscout24.ch â€” Switzerland's leading property portal
  // Uses JSON-LD and meta tags; multilingual (de/fr/it/en)

  "defaultValues": {
    "country":            { "value": "Switzerland" },
    "currency":           { "value": "CHF" },
    "area_unit":          { "value": "sqmt" },
    "locale_code":        { "value": "de-CH" },
    "for_rent_short_term":{ "value": "false" }
  },

  "images": [{
    "cssLocator": "img[src*='immoscout24'], img[src*='is24cdn']",
    "cssAttr": "src"
  }],

  "intFields": {
    "count_bedrooms": {
      "jsonLdPath": "numberOfRooms",
      "fallbacks": [
        { "cssLocator": "[data-test='rooms']", "modifiers": ["digitsOnly"] }
      ]
    }
  },

  "floatFields": {
    "price_float": {
      "jsonLdPath": "offers.price",
      "fallbacks": [
        { "cssLocator": "[data-test='price']", "modifiers": ["digitsOnly"] }
      ]
    },
    "constructed_area": {
      "jsonLdPath": "floorSize.value",
      "fallbacks": [
        { "cssLocator": "[data-test='living-space']", "modifiers": ["digitsOnly"] }
      ]
    },
    "latitude": {
      "jsonLdPath": "geo.latitude"
    },
    "longitude": {
      "jsonLdPath": "geo.longitude"
    }
  },

  "textFields": {
    "title": {
      "cssLocator": "meta[property='og:title']",
      "cssAttr": "content",
      "fallbacks": [
        { "cssLocator": "head > title" }
      ]
    },
    "description": {
      "cssLocator": "meta[property='og:description']",
      "cssAttr": "content"
    },
    "price_string": {
      "cssLocator": "[data-test='price']",
      "fallbacks": [
        { "jsonLdPath": "offers.price" }
      ]
    },
    "address_string": {
      "jsonLdPath": "address.streetAddress"
    },
    "city": {
      "jsonLdPath": "address.addressLocality"
    },
    "region": {
      "jsonLdPath": "address.addressRegion"
    },
    "postal_code": {
      "jsonLdPath": "address.postalCode"
    },
    "main_image_url": {
      "cssLocator": "meta[property='og:image']",
      "cssAttr": "content"
    },
    "property_type": {
      "jsonLdPath": "@type"
    },
    "reference": {
      "urlPathPart": "-1"
    }
  },

  "booleanFields": {
    "for_sale": {
      "urlPathPart": "2",
      "evaluator":      "include?",
      "evaluatorParam": "buy"
    },
    "for_rent": {
      "urlPathPart": "2",
      "evaluator":      "include?",
      "evaluatorParam": "rent"
    },
    "for_rent_long_term": {
      "urlPathPart": "2",
      "evaluator":      "include?",
      "evaluatorParam": "rent"
    }
  }
}]
