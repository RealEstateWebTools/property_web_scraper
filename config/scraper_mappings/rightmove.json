[
{
  "name": "rightmove",
  "defaultValues":
  {
    "country":
    {
      "value": "UK"
    },
    "area_unit":
    {
      "value": "sqft"
    },
    "currency":
    {
      "value": "GBP"
    }
  },
  "floatFields":
  {
    "price_float":
    {
      "cssLocator": "#propertyHeaderPrice > strong",
      "stripFirstChar": "true",
      "stripPunct": "true"
    },
    "longitude":
    {
      "xpath": "//meta[@property='place:location:longitude']/@content"
    },
    "latitude":
    {
      "xpath": "//meta[@property='place:location:latitude']/@content"
    }
  },
  "textFields":
  {
    "reference": {
      "urlPathPart": "2",
      "splitTextCharacter": ".",
      "splitTextArrayId": "0"
    },
    "title":
    {
      "cssLocator": "title"
    },
    "description":
    {
      // https://stackoverflow.com/questions/45459234/rails-nokogiri-gem-scrap-data-using-itemprop
      "xpath": "//p[@itemprop = 'description']"
    },
    "price_string":
    {
      "cssLocator": "#propertyHeaderPrice > strong"
    },

    "address_string":
    {
      "xpath": "//meta[@itemprop = 'streetAddress']/@content"
    },
    "main_image_url":
    {
      "xpath": "//meta[@name='twitter:image:src']/@content"
    }
  },
  "images": [
    {
      "xpath": "//meta[@property='og:image']/@content",
      "stripString": "_max_135x100"
    }
  ],
  "booleanFields": {
    "for_rent": {
      "urlPathPart": "1",
      "evaluator": "include?",
      "evaluatorParam": "property-to-rent"
    },
    "for_sale": {
      "urlPathPart": "1",
      "evaluator": "include?",
      "evaluatorParam": "property-for-sale"
    }
  }

}]