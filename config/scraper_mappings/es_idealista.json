[{
  "name": "es_idealista",
  "expectedExtractionRate": 0.75,
  "defaultValues": {
    "country": { "value": "Spain" },
    "area_unit": { "value": "sqm" },
    "currency": { "value": "EUR" },
    "for_rent_short_term": { "value": "false" },
    "locale_code": { "value": "es" }
  },
  "intFields": {
    "count_bedrooms": {
      "scriptRegEx": "\\d+(?=\"[^}]*\"featureName\":\"ROOM_NUMBER\")",
      "fallbacks": [
        { "cssLocator": ".details-property_features li", "cssCountId": "1" }
      ]
    },
    "count_bathrooms": {
      "cssLocator": ".details-property_features li",
      "cssCountId": "2",
      "fallbacks": [
        { "scriptRegEx": "\\d+(?= bathroom)" }
      ]
    },
    "constructed_area": {
      "scriptRegEx": "\\d+(?=\"[^}]*\"featureName\":\"CONSTRUCTED_AREA\")",
      "fallbacks": [
        { "cssLocator": ".details-property_features li", "cssCountId": "0" }
      ]
    }
  },
  "floatFields": {
    "price_float": {
      "scriptRegEx": "(?<=price:\\s)[\\d.]+",
      "fallbacks": [
        { "scriptRegEx": "(?<=initialPrice:\\s)\\d+" },
        { "cssLocator": ".info-data-price .txt-bold" }
      ]
    }
  },
  "textFields": {
    "reference": {
      "cssLocator": "input[name='adId']",
      "cssAttr": "value",
      "fallbacks": [
        { "scriptRegEx": "(?<=propertyId:\\s)\\d+" }
      ]
    },
    "title": {
      "cssLocator": ".main-info__title-main",
      "fallbacks": [
        { "cssLocator": "meta[property='og:title']", "cssAttr": "content" },
        { "cssLocator": "title" }
      ]
    },
    "price_string": {
      "cssLocator": ".info-data-price"
    },
    "description": {
      "cssLocator": ".adCommentsLanguage",
      "fallbacks": [
        { "cssLocator": "meta[property='og:description']", "cssAttr": "content" },
        { "cssLocator": "meta[name='description']", "cssAttr": "content" }
      ]
    },
    "address_string": {
      "cssLocator": ".main-info__title-minor",
      "fallbacks": [
        { "cssLocator": "meta[property='og:title']", "cssAttr": "content" }
      ]
    },
    "main_image_url": {
      "cssLocator": "meta[property='og:image']",
      "cssAttr": "content",
      "fallbacks": [
        { "cssLocator": "meta[name='twitter:image']", "cssAttr": "content" }
      ]
    }
  },
  "images": [{
    "cssLocator": "meta[property='og:image']",
    "cssAttr": "content"
  }],
  "booleanFields": {
    "for_sale": {
      "scriptRegEx": "(?<=operation:\\s*')[^']+",
      "evaluator": "include?",
      "evaluatorParam": "sale"
    },
    "for_rent": {
      "scriptRegEx": "(?<=operation:\\s*')[^']+",
      "evaluator": "include?",
      "evaluatorParam": "rent"
    }
  }
}]
