<% details = [] %>
<% details << ["Reference", @listing.reference] if @listing.reference.present? %>
<% details << ["Price", @listing.price_string] if @listing.price_string.present? %>
<% details << ["Bedrooms", @listing.count_bedrooms] if @listing.count_bedrooms.present? && @listing.count_bedrooms.to_i > 0 %>
<% details << ["Bathrooms", @listing.count_bathrooms] if @listing.count_bathrooms.present? && @listing.count_bathrooms.to_i > 0 %>
<% details << ["Area", "#{@listing.constructed_area} #{@listing.area_unit}"] if @listing.constructed_area.present? && @listing.constructed_area.to_i > 0 %>
<% details << ["Address", @listing.address_string] if @listing.address_string.present? %>

<% if details.any? %>
  <div class="pws-detail-list">
    <% details.each do |label, value| %>
      <div class="pws-detail-row">
        <span class="pws-detail-label"><%= label %></span>
        <span class="pws-detail-value"><%= value %></span>
      </div>
    <% end %>
  </div>
<% end %>
